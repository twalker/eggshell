{
  "name": "eggshell",
  "version": "0.0.17",
  "private": true,
  "dependencies": {
    "body-parser": "^1.10.2",
    "errorhandler": "^1.3.2",
    "express": "^4.10.8",
    "jade": "^1.7.0",
    "morgan": "^1.5.1",
    "nib": "^1.0.4",
    "serve-favicon": "^2.2.0",
    "stylus": "^0.49.3"
  },
  "devDependencies": {
    "6to5ify": "^4.0.0",
    "backbone": "^1.1.2",
    "bower": "^1.3.12",
    "browserify": "^8.1.1",
    "browserify-shim": "^3.8.2",
    "chai": "^1.10.0",
    "cuid": "~1.2.4",
    "del": "^0.1.3",
    "es6-promise": "^2.0.1",
    "exorcist": "^0.1.6",
    "gulp": "^3.8.10",
    "gulp-6to5": "^1.0.2",
    "gulp-bump": "^0.1.13",
    "gulp-jshint": "^1.8.6",
    "gulp-livereload": "^2.1.1",
    "gulp-rename": "^1.2.0",
    "gulp-requirejs": "~0.1.3",
    "gulp-stylus": "^1.3.3",
    "gulp-uglify": "^1.0.2",
    "jquery": "^2.1.3",
    "jshint-stylish": "^1.0.0",
    "lodash": "^3.0.1",
    "mocha": "^2.1.0",
    "mocki": "git://github.com/twalker/mocki.git#v0.4.23",
    "mustache": "^1.0.0",
    "nib": "^1.1.0",
    "sinon": "^1.12.2",
    "stringify": "^3.1.0",
    "supertest": "^0.14.0",
    "watch": "^0.13.0"
  },
  "browserify": {
    "transform": [
      "browserify-shim",
      ["stringify", {"extensions": [".mustache"] } ]
    ]
  },
  "browserify-shim": {},
  "scripts": {
    "test": "mocha --ui bdd --recursive --reporter nyan --timeout 10000 --slow 300",
    "test-sh": "bin/mocha-test.sh",
    "build:watch": "watch 'npm run build:app' ./public/js/src",
    "build:watch-unit-tests": "watch 'npm run build:unit-tests' ./public/js/test",
    "build:app": "browserify public/js/src/app.js -d -t 6to5ify | exorcist public/js/dist/app.js.map > public/js/dist/app.js",
    "build:unit-tests": "browserify public/js/test/index.js -d -t stringify -t 6to5ify | exorcist public/js/dist/unit-tests.js.map > public/js/dist/unit-tests.js",
    "start": "node app",
    "start-dev": "node-inspector --save-live-edit & node --debug app",
    "start-prod": "NODE_ENV=production pm2 start app.js --name eggshell -i max",
    "stop-prod": "pm2 stop eggshell"
  }
}
